#include "render.h"
#include "globals.h"
#include "bitmaps.h"

void drawTank() {
	for (int row = 384; row <= 400; row++) {
		int current_position = getTankPositionGlobal();
		for (int col = current_position; col < current_position + 30; col++) {
			framepointer0[row*640 + col] = tank_15x8[row - 384][col - current_position];
		}
	}
}

void render() {
	drawTank();
}
