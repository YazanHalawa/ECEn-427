			if (reset || (alien_top_in_12x8[(row - start_y)/scalingFactor] & (1<<((col-start_x)/scalingFactor))) == 0){
				framePointer0[row*pixelWidth + col] = BLACK;
			} else {
				framePointer0[row*pixelWidth + col] = WHITE;
			}
		}
	}
}

